<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capture"
    tools:context=".Homescreen">

    <TextView
        android:id="@+id/hms"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#E91E63"
        android:gravity="center"
        android:text="Homescreen"
        android:textColor="#000"
        android:textSize="23dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hms"
        android:layout_toLeftOf="@id/button3"
        android:text="Profile" />

    <Button
        android:id="@+id/button3"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hms"
        android:layout_centerHorizontal="true"
        android:text="Home" />

    <Button
        android:id="@+id/button2"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hms"
        android:layout_toRightOf="@id/button3"
        android:text="Videos" />



    <EditText
        android:id="@+id/edit_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:inputType="phone"
        />

    <ImageView
        android:id="@+id/image_call"
        android:layout_width="93dp"
        android:layout_height="97dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="450dp"
        android:layout_toRightOf="@+id/loc"
        android:src="@drawable/ic_phone" />

    <ImageButton
        android:id="@+id/loc"
        android:layout_width="105dp"
        android:layout_height="106dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/round_button1"
        android:gravity="center_vertical|center_horizontal"
        android:src="@android:drawable/ic_menu_mylocation"
        android:textColor="#fff" />

    <ImageButton
        android:id="@+id/star1"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="38dp"
        android:layout_toLeftOf="@id/star2"
        android:background="#00ffffff"
        android:onClick="ToastActivity"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/star2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/star3"
        android:layout_marginBottom="0dp"
        android:background="#00ffffff"
        android:onClick="ToastActivity"
        android:src="@android:drawable/btn_star" />
    <ImageButton
        android:id="@+id/star3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="#00ffffff"
        android:onClick="ToastActivity"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/star4"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-11dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/star3"
        android:background="#00ffffff"
        android:onClick="ToastActivity"
        android:src="@android:drawable/btn_star" />
    <ImageButton
        android:id="@+id/star5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/star4"
        android:layout_marginBottom="0dp"
        android:background="#00ffffff"
        android:onClick="ToastActivity"
        android:src="@android:drawable/btn_star" />

    <RadioGroup
        android:id="@+id/RGroup"
        android:layout_width="286dp"
        android:layout_height="286dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-213dp"
        android:layout_marginTop="177dp"
        android:layout_toEndOf="@+id/star3"
        android:padding="20dp">

        <RadioButton
            android:id="@+id/heart"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:text="Cardiac arrest"
            android:textSize="20dp"
            />

        <RadioButton
            android:id="@+id/acc"
            android:layout_width="213dp"
            android:layout_height="42dp"
            android:layout_alignBottom="@+id/RGroup"
            android:text="Accident"
            android:textSize="20dp"
            />

        <RadioButton
            android:id="@+id/terror"
            android:layout_width="213dp"
            android:layout_height="47dp"
            android:text="Terror attack"
            android:textSize="20dp"
            />

        <RadioButton
            android:id="@+id/oth"
            android:layout_width="216dp"
            android:layout_height="48dp"
            android:text="Others"
            android:textSize="20dp"
            />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id = "@+id/text"
        android:text=" 2 CLICK'S CAN SAVE ONE'S LIFE !!!!! "
        android:textColor="#000"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"

        android:ellipsize = "marquee"
        android:fadingEdge = "horizontal"
        android:marqueeRepeatLimit = "marquee_forever"
        android:scrollHorizontally = "true"
        android:singleLine = "true"
        />


</RelativeLayout>

